{
    "appId": "com.rizverse.desktop",
    "productName": "Schedule",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/main.js",
      "electron/preload.js",
      "out/**/*",
      "public/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "public/logo.jpg"
    },
    "win": {
      "target": "nsis",
      "icon": "public/logo.ico",
      "sign": false,
      "signAndEditExecutable": false
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "icon": "public/logo.jpg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }